extends layout

block content

  div(class="col-lg-13")
    div(class="input-group")
      input.form-control(type='text', placeholder='Search for your web service' id="searchBox")
      span.input-group-btn
        button.btn.btn-secondary(type='button') Go!

  hr(class="hr")
  table(class="table table-striped table-responsive results" id="table")
    thead
      tr
        th Server
        th Path
        th Check service
      tr.warning.no-result
        td(colspan='4')
          i.fa.fa-warning
          |  No result
    tbody
       for url in data
         tr
           td #{url.server}
           td #{url.path}
           td <input type="button" value="click me" class="btn-primary">
